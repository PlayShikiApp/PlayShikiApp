{
    "manifest_version": 2,
    "name": "PlayShikimori App",
    "description": "Расширение возвращает функционал просмотра аниме на сайте shikimori.one (shikimori.org)",
    "homepage_url": "https://github.com/PlayShikimoriApp/PlayShikiApp",
    "version": "1.3.0",
    "browser_specific_settings": {
      "gecko": {
        "id": "{9c3bce87-c930-47ef-a559-ffe702420123}",
        "strict_min_version": "55.0"
      }
    },
    "icons": {"64": "logo.png"},
    "permissions": [
        "storage",
        "tabs",
        "<all_urls>",
        "*://shikimori.one/*",
        "*://shikimori.org/*"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval' blob: https://ssl.google-analytics.com https://www.google-analytics.com; object-src 'self'; media-src 'self' blob: https://*.anilibria.tv",
    "content_scripts": [{
        "matches": [
            "*://shikimori.org/*",
            "*://shikimori.one/*"
        ],
        "js": [
            "justice.js"
        ],
        "run_at": "document_start"
    }],
    "background": {
        "page": "index.html"
    },
    "browser_action": {
        "default_title": "PlayShikimori App"
    },
    "web_accessible_resources": [ "static/js/*.*", "static/css/*.*", "static/assets/*.*", "static/img/*.*", "*.*", "players/videojs/*.*", "players/videojs/css/*.*", "players/videojs/js/*.*", "players/anilibria/*.*", "players/anilibria/img/*.*", "players/anilibria/css/*.*", "players/anilibria/js/*.*", "https://raw.github.com/", "https://mozilla.github.io", "https://shikimori.one", "https://shikimori.org"]
}
