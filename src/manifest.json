{
    "manifest_version": 2,
    "name": "PlayShiki App",
    "description": "Расширение возвращает функционал просмотра аниме на сайте shikimori.one (shikimori.org)",
    "homepage_url": "https://github.com/PlayShikiApp/PlayShikiApp",
    "version": "1.4.4",
    "key": "",
    "icons": {"64": "logo.png"},
    "permissions": [
        "storage",
		"tabs",
		"<all_urls>",
        "*://shikimori.one/*",
        "*://shikimori.org/*"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval' blob: https://ssl.google-analytics.com https://www.google-analytics.com; object-src 'self'; media-src 'self' blob: https://*.anilibria.tv http://*.anilibria.tv",
    "content_scripts": [{
        "matches": [
            "*://shikimori.org/*",
            "*://shikimori.one/*"
        ],
        "js": [
            "jquery-3.4.1.min.js",
            "content/shikimori/js/main.js"
        ],
        "run_at": "document_idle"
    }, {
        "matches": [
            "*://myanimelist.net/anime/*"
        ],
        "js": [
            "jquery-3.4.1.min.js",
            "content/myanimelist/js/main.js"
        ],
        "run_at": "document_idle"
    }],
    "commands": {
        "capture" : {
            "suggested_key": {
                "default": "Alt+I" 
            },
            "description": "Save a screenshot"
        }
    },
    "background": {
        "page": "index.html"
    },
    "browser_action": {
        "default_title": "PlayShiki App"
    },
    "web_accessible_resources": ["content/shikimori/js/*.*", "content/myanimelist/js/*.*", "content/myanimelist/css/*.*", "static/js/*.*", "static/css/*.*", "static/assets/*.*", "static/img/*.*", "*.*", "players/videojs/*.*", "players/videojs/css/*.*", "players/videojs/js/*.*", "players/anilibria/*.*", "players/anilibria/img/*.*", "players/anilibria/css/*.*", "players/anilibria/js/*.*", "https://raw.github.com/", "https://mozilla.github.io", "https://shikimori.one", "https://shikimori.org"],
	"incognito": "split"
}
