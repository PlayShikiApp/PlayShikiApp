{
    "manifest_version": 2,
    "name": "PlayShikimori App",
    "description": "Расширение возвращает функционал просмотра аниме на сайте shikimori.one (shikimori.org)",
    "homepage_url": "https://github.com/PlayShikimoriApp/PlayShikiApp",
    "version": "1.0.2",
    "icons": {"64": "logo.png"},
    "browser_specific_settings": {
      "gecko": {
        "id": "playshikimoriapp@example.com",
        "strict_min_version": "42.0"
      }
    },
    "permissions": [
        "proxy",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "cookies",
        "<all_urls>",
        "*://shikimori.one/*",
        "*://shikimori.org/*"
    ],
    "content_scripts": [{
        "matches": [
            "*://shikimori.org/*",
            "*://shikimori.one/*",
            "*://mozilla.github.io/*"
        ],
        "js": [
            "jquery-3.2.1.min.js",
            "justice.js"
        ]
    }],
    "background": {
        "page": "index.html"
    },
    "browser_action": {
        "default_title": "PlayShikimori App"
    },
    "web_accessible_resources": [ "static/js/*.*", "static/css/*.*", "static/assets/*.*", "static/img/*.*", "*.*", "css/*.*", "resources/*.*", "keys/*.*", "https://raw.github.com/", "https://mozilla.github.io", "https://shikimori.one", "https://shikimori.org"]
}
