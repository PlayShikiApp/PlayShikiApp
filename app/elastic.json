// elasticsearch reqeust samples

// get tokens generated by analyzer
curl -XGET 'http://localhost:9200/tests/_analyze' -H 'Content-Type: application/json' -d'{
  "analyzer": "my_analyzer",
  "text": ["watashi", "watashi"]
}' | jq

// get tokens for generated for field
curl -XGET 'http://localhost:9200/tests/_analyze' -H 'Content-Type: application/json' -d'{
  "field": "name",
  "text": "watashi"
}' | jq


curl -XDELETE 'http://localhost:9200/tests' | jq
curl -XPUT 'http://localhost:9200/tests' -d'{
  "settings": {
    "analysis": {
      "analyzer": {
        "my_analyzer": {
          "type": "custom",
          "tokenizer": "edge_ngram_tokenizer",
          "filter": ["lowercase", "asciifolding"]
        }
      },
      "tokenizer": {
        "edge_ngram_tokenizer": {
          "type": "edgeNGram",
          "min_gram": "3",
          "max_gram": "12",
          "token_chars": ["letter", "digit"]
        }
      }
    }
  },
  "mappings": {
    "test": {
      "properties": {
        "name": {
          "type": "string",
          "analyzer": "my_analyzer",
          "index_options": "docs",
          "norms": { "enabled": false }
        }
      }
    }
  }
}' | jq

curl -XPOST 'http://localhost:9200/tests/test' -d'{ "id": 1, "name": ["name"] }' | jq
curl -XPOST 'http://localhost:9200/tests/test' -d'{ "id": 3, "name": ["name", "name"] }' | jq
curl -XPOST 'http://localhost:9200/tests/test' -d'{ "id": 4, "name": ["name name"] }' | jq

sleep 1

curl -XGET 'http://localhost:9200/tests/test/_search' -d'{
  "query": {
    "match": {
      "name": "name"
    }
  }
}' | jq

sleep 1

curl -XPOST 'http://localhost:9200/tests/test' -d'{ "id": 1, "name": ["name"] }' | jq
curl -XPOST 'http://localhost:9200/tests/test' -d'{ "id": 3, "name": ["name", "name"] }' | jq
curl -XPOST 'http://localhost:9200/tests/test' -d'{ "id": 4, "name": ["name name"] }' | jq

sleep 1

curl -XGET 'http://localhost:9200/tests/test/_search' -d'{
  "query": {
    "match": {
      "name": "name"
    }
  }
}' | jq

curl -XGET 'http://localhost:9200/tests/test/_search' -d'{
  "query": {
    "match_phrase": {
      "name": {
        "query": "name",
        "slop": 201
      }
    }
  }
}' | jq


curl -XPOST 'http://localhost:9200/tests/test' -d'{ "id": 1, "name": "watashi", "weight": "1" }' | jq
curl -XPOST 'http://localhost:9200/tests/test' -d'{ "id": 1, "name": "watashi", "weight": "6" }' | jq
curl -XPOST 'http://localhost:9200/tests/test' -d'{ "id": 1, "name": "watashi", "weight": "7" }' | jq
curl -XPOST 'http://localhost:9200/tests/test' -d'{ "id": 1, "name": "watashi", "weight": "8" }' | jq
curl -XPOST 'http://localhost:9200/tests/test' -d'{ "id": 2, "name": "watashi", "weight": "9" }' | jq


curl -XGET 'http://localhost:9200/tests/test/_search' -d'{
  "query": {
    "function_score": {
      "query": {
        "match": {
          "name": "watashi"
        }
      },
      "field_value_factor": {
        "field": "weight",
        "factor": 1,
        "modifier": "none"
      }
    }
  }
}' | jq

curl -XGET 'http://localhost:9200/tests/test/_search' -d'{
  "query": {
    "dis_max": {
      "queries": [
        { "match": { "name": "watashi" } }
      ],
      "tie_breaker": 0,
      "boost": 1
    }
  }
}' | jq

curl -XGET 'http://localhost:9200/tests/test/_search' -d'{
  "query": {
    "constant_score": {
      "filter": { "match": { "name": "watashi" } },
      "boost": 1
    }
  }
}' | jq






















